{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "commonSettings": {
            "type": "object",
            "metadata": {
                "Description": "Common settings object"
            }
        }
    },
    "variables": {
        "tenantName": "[parameters('commonSettings').tenantName]",
        "longtermResourceGroupName": "[parameters('commonSettings').longtermResourceGroupName]",
        "repositoryUrl": "[parameters('commonSettings').repositoryUrl]",
        "apiVersions": {
            "storageAccounts": "2015-06-15",
            "networkSecurityGroups": "2015-06-15",
            "loadBalancers": "2016-03-30",
            "virtualNetworks": "2015-06-15",
            "publicIPAddresses": "2015-06-15",
            "networkInterfaces": "2015-06-15",
            "virtualMachines": "2015-06-15",
            "virtualMachineScaleSets": "2015-06-15"
        },
        "publicIPs": {
            "regserver": "regserver",
            "hostserver": "hostserver",
            "webportal": "webportal"
        },
        "ipAddressId": {
            "regserver": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', variables('longtermResourceGroupName'), '/providers/Microsoft.Network/publicIPAddresses/', concat(variables('tenantName'), '-', variables('publicIPs').regserver))]",
            "hostserver": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', variables('longtermResourceGroupName'), '/providers/Microsoft.Network/publicIPAddresses/', concat(variables('tenantName'), '-', variables('publicIPs').hostserver))]",
            "webportal": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', variables('longtermResourceGroupName'), '/providers/Microsoft.Network/publicIPAddresses/', concat(variables('tenantName'), '-', variables('publicIPs').webportal))]"
        },
        "addressrange": {
            "global": "10.0.0.0/16",
            "regserver": "10.0.0.0/24",
            "regserverdatabase": "10.0.0.1/24",
            "hostserver": "10.0.0.2/24",
            "webportal": "10.0.0.3/24"
        },
        "vnet": {
            "name": "[concat(variables('tenantName'),'-vnet')]",
            "address": "[variables('addressrange').global]",
            "subnet": {
                "regserver": {
                    "name": "[concat(variables('tenantName'), '-subnet-', 'regserver')]",
                    "address": "[variables('addressrange').regserver]",
                    "nsgName":  "regserver-nsg"
                },
                "regserverdatabase": {
                    "name": "[concat(variables('tenantName'), '-subnet-', 'regserverdatabase')]",
                    "address": "[variables('addressrange').regserverdatabase]",
                    "nsgName": "regserver-db-nsg"
                },
                "hostserver": {
                    "name": "[concat(variables('tenantName'), '-subnet-', 'hostserver')]",
                    "address": "[variables('addressrange').hostserver]",
                    "nsgName": "hostserver-nsg"
                },
                "webportal": {
                    "name": "[concat(variables('tenantName'), '-subnet-', 'webportal')]",
                    "address": "[variables('addressrange').webportal]",
                    "nsgName": "portal-nsg"
                }
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "[variables('apiVersions').networkSecurityGroups]",
            "location": "[resourceGroup().location]",
            "name": "[variables('vnet').subnet.regserver.nsgName]",
            "tags": { "displayName": "NetworkSecurityGroup RegServer" },
            "properties": {
                "securityRules": [
                    {
                        "name": "regserver-http-in",
                        "properties": {
                            "priority": 100,
                            "description": "Allow TCP/80 Inbound",
                            "access": "Allow",
                            "direction": "Inbound",
                            "protocol": "Tcp",
                            "sourceAddressPrefix": "Internet",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "[variables('addressrange').regserver]",
                            "destinationPortRange": "80"
                        }
                    },
                    {
                        "name": "regserver-https-in",
                        "properties": {
                            "priority": 101,
                            "description": "Allow TCP/443 Inbound",
                            "access": "Allow",
                            "direction": "Inbound",
                            "protocol": "Tcp",
                            "sourceAddressPrefix": "Internet",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "[variables('addressrange').regserver]",
                            "destinationPortRange": "443"
                        }
                    },
                    {
                        "name": "regserver-to-regserverdatabase",
                        "properties": {
                            "priority": 102,
                            "description": "Allow TCP/3306 MySQL to Database",
                            "access": "Allow",
                            "direction": "Inbound",
                            "protocol": "Tcp",
                            "sourceAddressPrefix": "[variables('addressrange').regserver]",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "[variables('addressrange').regserverdatabase]",
                            "destinationPortRange": "3306"
                        }
                    },
                    {
                        "name": "hostserver-http-in",
                        "properties": {
                            "priority": 103,
                            "description": "Allow TCP/80 Inbound",
                            "access": "Allow",
                            "direction": "Inbound",
                            "protocol": "Tcp",
                            "sourceAddressPrefix": "Internet",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "[variables('addressrange').hostserver]",
                            "destinationPortRange": "80"
                        }
                    },
                    {
                        "name": "hostserver-https-in",
                        "properties": {
                            "priority": 104,
                            "description": "Allow TCP/443 Inbound",
                            "access": "Allow",
                            "direction": "Inbound",
                            "protocol": "Tcp",
                            "sourceAddressPrefix": "Internet",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "[variables('addressrange').hostserver]",
                            "destinationPortRange": "443"
                        }
                    },
                    {
                        "name": "block-everything",
                        "properties": {
                            "priority": 4096,
                            "description": "Block all inbound traffic",
                            "access": "Deny",
                            "direction": "Inbound",
                            "protocol": "*",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "[variables('addressrange').regserver]",
                            "destinationPortRange": "*"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "[variables('apiVersions').virtualNetworks]",
            "location": "[resourceGroup().location]",
            "name": "[variables('vnet').name]",
            "tags": { "displayName": "Virtual Network" },
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('vnet').subnet.regserver.nsgName)]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('addressrange').global]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('vnet').subnet.regserver.name]",
                        "properties": {
                            "addressPrefix": "[variables('vnet').subnet.regserver.address]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('vnet').subnet.regserver.nsgName)]"
                            }
                        }
                    }
                ]
            }
        }
    ]
}